<%= render 'layouts/navbar' %>
<div class="container" id="home-page">
  <div id="playlists-head">Playlists</div>
  <div class="row">
    <% @playlists.each do |playlist| %>
      <div class="col m4">
        <div class="card">
          <div class="card-content">
            <span class="card-title"><h4><%= link_to "#{playlist.name}", playlist_path(playlist) %></h4></span>
            <h6>Episodes: <%= playlist.episodes.size %></h6>
            <h6>By: <%= playlist.user.name %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
